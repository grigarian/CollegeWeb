@model Group

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Удалить Группу</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 cpl-2">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" disabled class="ms-2"></label>
                </div>


                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Удалить</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Group" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Вернуться к списку
                        </a>
                    </div>
                </div>


            </div>

        </form>
    </div>
</div>





