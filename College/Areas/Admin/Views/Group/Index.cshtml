@model List<Group>

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Группы</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Group" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Добавить группу
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Название
                        </th>
                        <th>
                            Курс
                        </th>
                        <th>
                            Id Специальности
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Course</td>
                            <td>@obj.SpecializationId</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Group" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Изменить
                                    </a>
                                    <a asp-controller="Group" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Удалить
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


