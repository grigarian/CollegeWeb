@model GroupVM


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2"> @(Model.Group.Id != 0 ? "Изменить" : "Добавить") Группу</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Group.Id" hidden />
            
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="All"></div>
                        <div class="form-floating py-2 cpl-2">
                            <input asp-for="Group.Name" class="form-control border-0 shadow" />
                            <label asp-for="Group.Name" class="ms-2"></label>
                            <span asp-validation-for="Group.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Group.Course" class="form-control border-0 shadow" />
                            <label asp-for="Group.Course" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Group.SpecializationId" asp-items="@Model.SpecializationList" class="form-select border-0 shadow">
                                <option disabled selected>--Выбрать специальность--</option>
                            </select>
                            <label asp-for="Group.SpecializationId" class="ms-2"></label>
                            <span asp-validation-for="Group.SpecializationId" class="text-danger"></span>
                        </div>
                        


                        <div class="row pt-2">
                            <div class="col-6 col-md-3">

                                <button type="submit" class="btn btn-primary form-control">Применить</button>


                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Group" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Вернуться к списку
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>




@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent '
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
