@model Specialization

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.Id" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="All"></div>
                        <div class="form-floating py-2 cpl-2">
                            <input asp-for="@Model.Name" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Name" class="ms-2"></label>
                            
                        </div>





                        <div class="row pt-2">
                            <div class="col-6 col-md-3">

                                <button type="submit" class="btn btn-primary form-control">Применить</button>


                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Specialization" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Вернуться к списку
                                </a>
                            </div>
                        </div>


                    </div>
                </div>

            </div>


        </form>
    </div>
</div>




