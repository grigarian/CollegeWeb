@model IEnumerable<Teacher>

<div class="row pb-3 mb-4">
    @foreach (var teacher in Model)
    {
        <div class="col-lg-3 col-sm-6 p-1">
            <div class="card-border-0 h-100 d-flex flex-column p-3 shadow border-top border-5 rounded">
                <img src="@teacher.ImageUrl" class="card-img-top rounded" />
                <div class="card-body d-flex mt-1 flex-column justify-content-between">
                    <h5 class="card-title text-center">@teacher.Name</h5>
                    <p class="card-text text-center flex-grow-1">@teacher.Post</p>
                    <div>
                        <a asp-action="Details" asp-route-teacherId="@teacher.Id" class="btn btn-primary form-control">
                            Подробнее
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>